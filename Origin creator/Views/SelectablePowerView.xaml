<StackPanel
    x:Class="Origin_creator.SelectablePower"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Origin_creator"
    xmlns:viewModels="clr-namespace:Origin_creator.ViewModels"
    Margin="5" 
    HorizontalAlignment="Stretch"
    d:DesignHeight="60"
    d:DesignWidth="350"
    Background="#4E797A" 
    mc:Ignorable="d" d:DataContext="{d:DesignInstance viewModels:SelectablePowerViewModel}">
    <TextBlock
                FontSize="20"
                Text="{Binding TxtName}"
                TextAlignment="Center"
                HorizontalAlignment="Center"/>
        <TextBlock
                Text="{Binding TxtDescription}"
                TextAlignment="Justify"
                HorizontalAlignment="Center"
                TextWrapping="Wrap" />
    </StackPanel>
